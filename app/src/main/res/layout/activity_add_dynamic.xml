<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addDynamic">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <EditText
        android:id="@+id/tvDGId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="200dp"
        android:ems="10"
        android:hint="GameId"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/tvDOver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="200dp"
        android:ems="10"
        android:hint="Over"
        android:inputType="textPersonName" />
    <TextView
        android:id="@+id/q1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/q1opt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="150dp"
        android:ems="10"
        android:hint="Opt1"
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/q1opt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="150dp"
        android:ems="10"
        android:hint="Opt2"
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/q1opt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="150dp"
        android:ems="10"
        android:hint="Opt3"
        android:inputType="textPersonName" />
    <TextView
        android:id="@+id/q2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/q2opt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="150dp"
        android:ems="10"
        android:hint="Opt1"
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/q2opt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="150dp"
        android:ems="10"
        android:hint="Opt2"
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/q2opt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="150dp"
        android:ems="10"
        android:hint="Opt3"
        android:inputType="textPersonName" />
    <TextView
        android:id="@+id/q3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />
  <EditText
    android:id="@+id/q3opt1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="150dp"
    android:ems="10"
    android:hint="Opt1"
    android:inputType="textPersonName" />
    <EditText
        android:id="@+id/q3opt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="150dp"
        android:ems="10"
        android:hint="Opt2"
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/q3opt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="150dp"
        android:ems="10"
        android:hint="Opt3"
        android:inputType="textPersonName" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Submit"
        android:id="@+id/btnD"/>
    </LinearLayout>

</ScrollView>